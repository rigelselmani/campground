<%- include('../partials/header'); -%>

<div class="container">
    <h1 class="text-center">Add New Comment to <%=campground.name%></h1>
    <div class="row">  
       <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
              <div class="form-group">
                <input class="form-control" type="text"name="comment[text]" placeholder="text" required="true" autofocus="">
              </div>  
              <div class="form-group">
              <input class="form-control" type="text"name="comment[author]" placeholder="author" required="true"autofocus="">
              </div>
              <button class="btn btn-lg btn-primary btn-block" type="submit">submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') -%>