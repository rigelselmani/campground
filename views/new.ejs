<%- include('partials/header'); -%>

<div class="container">
    <h1 class="text-center">create a new campground</h1>
    <div class="row">  
       <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds" method="post">
              <div class="form-group">
                <input class="form-control" type="text"name="name" placeholder="name" required="true" autofocus="">
              </div>  
              <div class="form-group">
              <input class="form-control" type="text"name="image" placeholder="image" required="true"autofocus="">
              </div>
              <div class="form-group">
                <input class="form-control" type="text"name="description" placeholder="description" required="true"autofocus="">
              </div>
              <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            </form>
            <a class="text-center" href="/campgrounds">Campgrounds</a>
        </div>
    </div>
</div>

